/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 

page {
    background-color: #f1f1f1;
}

/**
封装设置列表
*/

.cell {
    background-color: white;
    font-size: 16px;
   
}

.cell-item {
    border-bottom: 1rpx solid #ddd;
    padding: 20rpx 20rpx;
     height: 100rpx;
      display: flex;
    justify-content: space-between;
    align-items: center;
}

/*
封装分割线`
*/

.devider {
    width: 100%;
    height: 20rpx;
    background-color: #f1f1f1;
    box-shadow: 0 5rpx 5rpx rgba(0, 0, 0, 0.01) inset;
}

/* 功能封装4：箭头 */

.arrow {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.arrow::after {
    width: 15rpx;
    height: 15rpx;
    content: "";
    border-top: 3rpx solid#ddd;
    border-right: 3rpx solid#ddd;
    transform: rotate(45deg);
}
