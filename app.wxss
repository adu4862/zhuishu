/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 

page {
    background-color: #f1f1f1;
}

/**
封装设置列表
*/

.cell {
    background-color: white;
    font-size: 16px;
   
}

.cell-item {
    border-bottom: 1rpx solid #ddd;
    padding: 20rpx 20rpx;
     height: 100rpx;
      display: flex;
    justify-content: space-between;
    align-items: center;
}

/*
封装分割线`
*/

.devider {
    width: 100%;
    height: 20rpx;
    background-color: #f1f1f1;
    box-shadow: 0 5rpx 5rpx rgba(0, 0, 0, 0.01) inset;
}

/* 功能封装4：箭头 */

.arrow {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.arrow::after {
    width: 15rpx;
    height: 15rpx;
    content: "";
    border-top: 3rpx solid#ddd;
    border-right: 3rpx solid#ddd;
    transform: rotate(45deg);
}

/* 功能封装7：星星评分封装 */

.star-after {
    color: #e2e2e2;
    font-size: 16px;
}

.star-before {
    color: #f19149;
    position: absolute;
    left: 0;
    top: 0;
    width: 90%;
    overflow: hidden;
     font-size: 16px;
}


/* 书评封装 */
.view-best-by-book{
    background-color: #fff;
    width: 100%;
    height: 280rpx;
    display: flex;
    justify-content: flex-start;
    border-top: 1rpx solid #f1f1f1;
    position: relative;
}


.comment-image-view {
    display: flex;
    align-items: flex-start;
    
}

.comment-image-view image {
    width: 120rpx;
    height: 120rpx;
    margin: 20rpx;
    border-radius: 100%;
    position: relative;
}

.comment-introduce {
    display: flex;
    flex-direction: column;
    padding-right: 10rpx;
}

.comment-title {
    font-size: 12px;
    color: #a58d5e;
    margin-top: 10rpx;
}

.comment-author {
    font-size: 14px;
    color: #212121;
    margin-top: 5rpx;
}

.comment-desc {
    height: 100rpx;
    font-size: 12px;
    color: #727272;
    margin-top: 40rpx; 
    overflow: hidden;
    text-overflow: ellipsis;
    width: 100%;
    
}

.comment-other {
    font-size: 14px;
    color: #b2b2b2;
    margin-top: 5rpx;
    margin-bottom: 10rpx;
}

.comment-yes {
    font-size: 12px;
    color: #b2b2b2;
    margin-top: 5rpx;
    margin-bottom: 5rpx;
}
