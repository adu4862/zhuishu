.view-info-author {
    background-color: white;
    width: 100%;
    height: 140rpx;
    display: flex;
    align-items: center;
    padding: 10rpx 20rpx;
}

.view-info-author image {
    width: 80rpx;
    height: 80rpx;
    border-radius: 100%;
}

.view-info-author view {
    display: flex;
    flex-direction: column;
    margin-left: 20rpx;
    padding: 10rpx 10rpx;
}

.text-name {
    color: #a7a45d;
    font-size: 14px;
}

.text-time {
    color: #aeaeae;
    font-size: 14px;
}


/* 书籍介绍 */
.book-contain {
    display: flex;
    background-color: white;
    height: 228rpx;
    width: 100%;
    
 border-radius: 20rpx ;
}

.image-view {
    display: flex;
    align-items: center;
}

.image-view image {
    width: 120rpx;
    height: 16prpx;
    margin: 20rpx 30rpx;
}

.book-introduce {
    display: flex;
    flex-direction: column;
    padding: 0rpx 10rpx;
   
}

.book-title {
    font-size: 16px;
    color: #000;
    margin-top: 20rpx;
}

.book-author {
    font-size: 14px;
    color: #727272;
    margin-top: 20rpx;
}

.book-desc {
    font-size: 14px;
    color: #7a7a7a;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    width: 100%;
}

.book-other {
    font-size: 14px;
    color: #b2b2b2;
    margin-top: 20rpx;
    margin-bottom: 20rpx;
}

/* 书单item */
.view-book-list-item{

    background-color: white;
    display: flex;
    flex-direction: column;
    margin: 20rpx 20rpx;
    border: 1rpx solid #c9c9c9;
    border-radius: 20rpx 20rpx;

}
.view-content{
    display: flex;
    margin-top: 20rpx;
}
.view-content image{
    width: 40rpx;
    height: 40rpx;
    margin-left: 20rpx;
}
.view-content text{
    color: #737373;
    font-size: 14px;
    margin-bottom: 20rpx;
    flex: 1;
    margin: 20rpx 20rpx;
    
}

.devider-height-1rpx {
    width: 90%;
    height: 2rpx;
    background-color: #f1f1f1;
    box-shadow: 0 5rpx 5rpx rgba(0, 0, 0, 0.01) inset;
    padding: 0rpx 20rpx;
    margin: 0rpx 20rpx;
}

