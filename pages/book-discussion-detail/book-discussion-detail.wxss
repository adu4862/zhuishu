.view-info-author {
    background-color: white;
    width: 100%;
    height: 140rpx;
    display: flex;
    align-items: center;
    padding: 10rpx 20rpx;
}

.view-info-author image {
    width: 80rpx;
    height: 80rpx;
    border-radius: 100%;
}

.view-info-author view {
    display: flex;
    flex-direction: column;
    margin-left: 20rpx;
    padding: 10rpx 10rpx;
}

.text-name {
    color: #a7a45d;
    font-size: 14px;
}

.text-time {
    color: #aeaeae;
    font-size: 14px;
}

.view-title-content {
    background-color: white;
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    padding-bottom: 40rpx;
}

.text-title {
    color: #222;
    font-size: 14px;
    width: 100%;
    padding: 0rpx 20rpx;
}

.text-content {
    margin-top: 20rpx;
    color: #737373;
    font-size: 14px;
    padding: 0rpx 20rpx;
    overflow: hidden;
    flex: 1;
    padding-bottom: 10rpx;
    line-height:50rpx;
}

.view-comments-count {
    width: 100%;
    height: 100rpx;
    display: flex;
    align-items: center;
}

.view-comments-count text {
    padding: 0rpx 20rpx;
    color: #adadad;
    font-size: 14px;
}
.view-comments{
    height: 180rpx;
}