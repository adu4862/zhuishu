/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}


/* 书籍详情 */
.book-contain {
    display: flex;
    background-color: white;
    border-bottom: 1rpx solid #ddd;
    height: 180rpx;
    width: 100%;
    align-items: center;
}

.image-view {
    display: flex;
    align-items: center;
}

.image-view image {
    width: 100rpx;
    height: 130rpx;
    margin: 20rpx 30rpx;
}

.book-introduce {
    display: flex;
    flex-direction: column;
    padding: 0rpx 10rpx;
   
}

.book-title {
    font-size: 16px;
    color: #000;
}

.book-author {
    font-size: 14px;
    color: #727272;
    margin-top: 20rpx;
}

.book-desc {
    font-size: 14px;
    color: #7a7a7a;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    width: 100%;
}

.book-other {
    font-size: 14px;
    color: #b2b2b2;
    margin-top: 20rpx;
    margin-bottom: 20rpx;
}
